<h1>Registered Remote Controls</h1>

<table border="1">
  <tr>
    <th>Host</th><th>Port</th><th>Environments</th><th>Free ?</th><th>UID</th>
  </tr>
  <% @pool.remote_controls.each do |rc| %>
    <tr>
      <td><%= rc.host %></td>
      <td><%= rc.port %></td>
      <td><%= rc.environments.join(", ") %></td>
      <td><%= rc.free? %></td>
      <td><%= rc.uid %></td>
    </tr>
  <% end %>
</table>
